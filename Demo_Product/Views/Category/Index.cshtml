@using EntityLayer.Concrete
@model List<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>@item.CategoryId</tr>
        <tr>@item.CategoryName</tr>
        <tr><a href="/Category/DeleteCategory/@item.CategoryId/" class="btn btn-danger">Sil</a></tr>
        <tr><a href="/Category/UpdateCategory/@item.CategoryId/" class="btn btn-danger">Güncelle</a></tr>
    }
</table>
<a href="/Category/AddCategory/" class="btn btn-outline-primary">Yeni Kategori Ekle</a>
